<!--pages/register.wxml-->
<view class="container">
  <form bindsubmit='formSubmit'>
    <input name="userNumber" placeholder="请输入校园卡号" ></input>
    <input name="name" placeholder="请输入姓名" ></input>
    <radio-group name="identity" class='usermotto' >
      <radio value="1" checked="true"/>教师
      <radio value="2" checked="false"/>学生
    </radio-group>
    <button class='usermotto' type='primary' formType="submit">注册             </button>
  </form>
</view>